<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donor_info">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_activity"/>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="385sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/radius_pink">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter valid information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="50sp"
                />
            <ImageView
                android:layout_marginLeft="15sp"
                android:layout_width="73sp"
                android:layout_height="74sp"
                android:src="@drawable/manicon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="40sp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="1dp"/>


                <EditText
                    android:id="@+id/myEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MD.**********"
                    android:inputType="text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="1dp"/>


                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="22"
                    android:inputType="text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="1dp"/>


                <EditText
                    android:id="@+id/bgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="A+"
                    android:inputType="text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="1dp"/>


                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ashulia"
                    android:inputType="text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="1dp"/>


                <EditText
                    android:id="@+id/Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="018*********"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:onClick="confirm"
            android:id="@+id/confirm"
            android:backgroundTint="@color/btncolor"
            android:layout_width="146sp"
            android:layout_height="52sp"
            android:layout_marginRight="10sp"
            android:text="Confirm"/>

    </LinearLayout>

</LinearLayout>